<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/lst_bt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_delete_forever_24"/>

            <ImageButton
                android:id="@+id/lst_bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_edit_24"/>

            <TextView
                android:id="@+id/lst_tv_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lst_bt_edit"
                android:layout_toStartOf="@id/lst_bt_delete"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/lst_bt_edit"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lst_tv_electricity_cost_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/electricity_cost_1_kwt_colon"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toEndOf="@+id/lst_tv_electricity_cost_label"
                        android:layout_alignBottom="@+id/lst_tv_electricity_cost_label"
                        android:layout_toStartOf="@+id/lst_tv_electricity_cost_value"
                        android:background="#c0c0c0"/>

                    <TextView
                        android:id="@+id/lst_tv_electricity_cost_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:layout_marginStart="10dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lst_tv_printer_cost_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/printer_cost_colon"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toEndOf="@+id/lst_tv_printer_cost_label"
                        android:layout_alignBottom="@+id/lst_tv_printer_cost_label"
                        android:layout_toStartOf="@+id/lst_tv_printer_cost_value"
                        android:background="#c0c0c0"/>

                    <TextView
                        android:id="@+id/lst_tv_printer_cost_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:layout_marginStart="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lst_tv_printer_power_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/printer_power_colon"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toEndOf="@+id/lst_tv_printer_power_label"
                        android:layout_alignBottom="@+id/lst_tv_printer_power_label"
                        android:layout_toStartOf="@+id/lst_tv_printer_power_value"
                        android:background="#c0c0c0"/>

                    <TextView
                        android:id="@+id/lst_tv_printer_power_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:layout_marginStart="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lst_tv_depreciation_years_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/depreciation_years_colon"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toEndOf="@+id/lst_tv_depreciation_years_label"
                        android:layout_alignBottom="@+id/lst_tv_depreciation_years_label"
                        android:layout_toStartOf="@+id/lst_tv_depreciation_years_value"
                        android:background="#c0c0c0"/>

                    <TextView
                        android:id="@+id/lst_tv_depreciation_years_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:layout_marginStart="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lst_tv_final_cost_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/final_cost_to_1_gram_colon"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toEndOf="@+id/lst_tv_final_cost_label"
                        android:layout_alignBottom="@+id/lst_tv_final_cost_label"
                        android:layout_toStartOf="@+id/lst_tv_final_cost_value"
                        android:background="#c0c0c0"/>

                    <TextView
                        android:id="@+id/lst_tv_final_cost_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:layout_marginStart="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lst_tv_cost_hour_electricity_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/cost_1_hour_work_electricity_colon"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toEndOf="@+id/lst_tv_cost_hour_electricity_label"
                        android:layout_alignBottom="@+id/lst_tv_cost_hour_electricity_label"
                        android:layout_toStartOf="@+id/lst_tv_cost_hour_electricity_value"
                        android:background="#c0c0c0"/>

                    <TextView
                        android:id="@+id/lst_tv_cost_hour_electricity_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:layout_marginStart="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lst_tv_cost_hour_deprecation_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/cost_1_hour_work_depreciation_colon"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toEndOf="@+id/lst_tv_cost_hour_deprecation_label"
                        android:layout_alignBottom="@+id/lst_tv_cost_hour_deprecation_label"
                        android:layout_toStartOf="@+id/lst_tv_cost_hour_deprecation_value"
                        android:background="#c0c0c0"/>

                    <TextView
                        android:id="@+id/lst_tv_cost_hour_deprecation_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        />

                </RelativeLayout>
                
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
