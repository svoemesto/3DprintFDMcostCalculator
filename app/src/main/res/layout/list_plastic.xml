<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/lpl_bt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_delete_forever_24"/>

            <ImageButton
                android:id="@+id/lpl_bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_edit_24"/>

            <TextView
                android:id="@+id/lpl_tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lpl_bt_edit"
                android:text="Name:"/>
            <TextView
                android:id="@+id/lpl_tv_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lpl_tv_name_label"
                android:layout_toStartOf="@id/lpl_bt_delete"
                android:layout_marginStart="10dp"
                android:text="Plastic name"/>

            <TextView
                android:id="@+id/lpl_tv_density_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lpl_bt_edit"
                android:layout_below="@id/lpl_tv_name_label"
                android:text="Density:"/>

            <TextView
                android:id="@+id/lpl_tv_density_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lpl_tv_density_label"
                android:layout_below="@id/lpl_tv_name_value"
                android:layout_toStartOf="@id/lpl_bt_delete"
                android:layout_marginStart="10dp"
                android:text="Density value"/>

        </RelativeLayout>


    </LinearLayout>



</LinearLayout>
